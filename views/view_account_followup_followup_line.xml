<odoo>
      <!-- Inherit Form view -->
      <record id="inherit_account_folloup_line" model="ir.ui.view">
          <field name="name">account_followup.followup.line.tree</field>
          <field name="model">account_followup.followup.line</field>
          <field name="inherit_id" ref="account_reports_followup.view_account_followup_followup_line_tree"/>
          <field name="arch" type="xml">
              <field name="print_letter" position="after">
                  <field name="automated_call"/>
              </field>
          </field>
      </record>

      <!-- Inherit Form view -->
      <record id="inherit_account_folloup_line_form" model="ir.ui.view">
          <field name="name">account_followup.followup.line.form</field>
          <field name="model">account_followup.followup.line</field>
          <field name="inherit_id" ref="account_reports_followup.view_account_followup_followup_line_form"/>
          <field name="arch" type="xml">
              <field name="print_letter" position="after">
                  <field name="automated_call"/>
              </field>
          </field>
      </record>
</odoo>
